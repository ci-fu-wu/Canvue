{
  "compilerOptions": {
    "outDir": "libs",
    "module": "ES2020",
    "target": "ES2020",
    "sourceMap": true,
    "noEmitOnError": true,
    "lib": [
      "ES2015",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false
    // "noImplicitAny": true,
    // "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
